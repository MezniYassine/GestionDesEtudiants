<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddStudentActivity">

    <TextView
        android:id="@+id/addStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="Add Student"
        android:textColor="@color/grape"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/addStudentName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="12dp"
        android:layout_below="@id/addStudent"
        android:hint="Enter Name"
        android:textColor="@color/grape"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/addStudentSurname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="15dp"
        android:layout_below="@id/addStudentName"
        android:hint="Enter Surname"
        android:textColor="@color/grape"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/addStudentMark"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="12dp"
        android:layout_below="@id/addStudentSurname"
        android:hint="Enter Mark"
        android:textColor="@color/grape"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/Submitbutton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/addStudentMark"
        android:backgroundTint="@color/grape"
        android:padding="12dp"
        android:text="Add"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"/>

</RelativeLayout>