<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_margin="16dp"
    tools:context=".UpdateActivity">

    <TextView
        android:id="@+id/updateStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="Edit Student"
        android:textColor="@color/orange"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editStudentName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="12dp"
        android:layout_below="@id/updateStudent"
        android:hint="Enter Name"
        android:textColor="@color/orange"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/editStudentSurname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="15dp"
        android:layout_below="@id/editStudentName"
        android:hint="Enter Surname"
        android:textColor="@color/orange"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/editStudentMark"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="12dp"
        android:layout_below="@id/editStudentSurname"
        android:hint="Enter Mark"
        android:textColor="@color/orange"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/updatebutton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/editStudentMark"
        android:backgroundTint="@color/orange"
        android:padding="12dp"
        android:text="Update"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"/>

</RelativeLayout>